<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Activity.LoginActivity">

    <View
            android:layout_width="wrap_content"
            android:layout_height="194dp"
            android:id="@+id/view"
            android:background="@color/themeColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="173dp" app:srcCompat="@drawable/ic_maple"
            android:id="@+id/login_maple_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"/>
    <ImageView
            android:layout_width="132dp"
            android:layout_height="39dp" app:srcCompat="@drawable/wd_logo"
            android:id="@+id/login_logo_tv"
            app:layout_constraintBottom_toTopOf="@+id/login_maple_iv" android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <View
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:id="@+id/bg_ID"
            android:background="@drawable/ic_borderline"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.55"/>
    <EditText android:layout_width="285dp" android:layout_height="wrap_content"
              android:hint="ID"
              android:theme="@style/EditTextStyle"
              app:layout_constraintBottom_toBottomOf="@+id/bg_ID"
              app:layout_constraintTop_toTopOf="@+id/bg_ID" app:layout_constraintVertical_bias="0.55"
              app:layout_constraintEnd_toEndOf="@+id/bg_ID"
              app:layout_constraintStart_toStartOf="@+id/bg_ID"
              android:id="@+id/login_id"/>
    <View
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:id="@+id/bg_PW"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_borderline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.72"/>
    <EditText android:layout_width="285dp" android:layout_height="wrap_content"
              android:hint="PW"
              android:theme="@style/EditTextStyle"
              android:inputType="textPassword"
              app:layout_constraintBottom_toBottomOf="@+id/bg_PW"
              app:layout_constraintTop_toTopOf="@+id/bg_PW" app:layout_constraintVertical_bias="0.72"
              app:layout_constraintEnd_toEndOf="@+id/bg_PW"
              app:layout_constraintStart_toStartOf="@+id/bg_PW"
              android:id="@+id/login_pw"/>
    <TextView
            android:text="Log in"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/ic_loginbutton"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:id="@+id/login_login_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.88"/>
</android.support.constraint.ConstraintLayout>